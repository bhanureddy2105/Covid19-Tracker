<%- include('header') %>


<ul class="navbar-nav ml-auto">
    <li class="nav-item ">
        <a class="navbar-brand" href="#">
            <%= state %>
        </a>
    </li>
</ul>
</nav>

<div class="row">
    <div class="col-lg-4 col-sm-6">
        <div class="card p-3" style="width: 16rem; background-color: #add8e6;">
            <div class="card-body">
                <h5 class="card-title">Total Active Cases</h5>
                <p class="card-text"><%= activeCases%> </p>
            </div>
        </div>
    </div>
    <div class="col-lg-4  col-sm-6">
        <div class="card p-3 " style="width: 16rem; background-color: #a8ee90;">
            <div class="card-body">
                <h5 class="card-title">Recovered</h5>
                <p class="card-text"><%= recovered %>(<%= recoveredNew %> &uarr;) </p>
            </div>
        </div>
    </div>
    <div class="col-lg-4  col-sm-6">
        <div class="card p-3 " style="width: 16rem; background-color: #FA8072;">
            <div class="card-body">
                <h5 class="card-title">Deaths</h5>
                <p class="card-text"><%= deaths%>(<%= deathsNew %> &uarr;)</p>
            </div>
        </div>
    </div>
</div>
<div class="marque">
    <marquee behavior="scroll" scrollamount="10" direction="left">(↑↓ Status change since yesterday) Last updated at
        <%= lastUpdated %> </marquee>
</div>

<div class="footer">
    <a  class="footer-link" href="https://github.com/bhanureddy2105"><i class="fab fa-github-square"></i></a>
    <a  class="footer-link" href="https://www.linkedin.com/in/v-bhanu-prakash-reddy-4143071a0/"><i class="fab fa-linkedin"></i></a>
    <a  class="footer-link" href="https://www.instagram.com/bhanu_reddy2105/"><i class="fab fa-instagram"></i></a>
    <p class="copyright" >© 2020 Bhanu.</p>
</div>

</body>

</html>